40 ns production
 &cntrl
  imin=0,                  ! Run MD without minimization
  irest=1,                 ! New MD, no restart
  ntx=5,                   ! Read coordinates and velocities
  t=0                      ! Time at the start
  iwrap=1,                 ! Wrap water
  nstlim=20000000,         ! Number of MD steps
  dt=0.002,                ! Time step in ps
  ntc=2,                   ! SHAKE
  jfastw=0,                ! SHAKE for water
  ntf=2,                   ! bond interactions involving H-atoms omitted
  cut=12.0,                ! Non-bonded cutoff  
  ntb=1,                   ! Periodic box, constant volume (NVT), Ewald on
  ntp = 0,                 ! No pressure control (NVT)
  ntt=3,                   ! Langevin thermostat
  gamma_ln=2.0,            ! Collision frequency
  tempi=298.0,             ! Initiale temperature
  temp0=298.0,             ! Reference temperature
  tautp=1,                 ! Time constant heating in ps
  ig=-1,                   ! Random seed for velocity
  ntr=1,                   ! Restraints
  restraint_wt = 0.1,            ! Constraints of 0.1 kcal/mol
  restraintmask = ':1-166@CA'          ! Constraints of heavy atoms except WAT
  ntpr=500,                ! Energy information every 1 ps 
  ntwx=500                 ! Coordinates written every 1 ps 
 &end
