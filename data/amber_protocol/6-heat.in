15 ps heat protein-ligand
 &cntrl
  imin=0,                  ! Run MD without minimization
  irest=0,                 ! New MD, no restart
  nstlim=15000,            ! Number of MD steos
  dt=0.001,                ! Time step in ps
  ntc=2,                   ! SHAKE
  jfastw=0,                ! SHAKE for water
  ntf=2,                   ! bond interactions involving H-atoms omitted
  cut=12.0,                ! Non-bonded cutoff  
  ntb=2,                   ! Periodic box, constant pressure (NPT), Ewald on
  ntp = 1,                 ! Constant pressure (NPT), isotropic position scaling
  pres0=1.01325,           ! Pressure
  ntt=3,                   ! Langevin thermostat
  gamma_ln=2.0,            ! Collision frequency
  tempi=1.0,               ! Initial temperature
  temp0=298.0,             ! Reference temperature
  ig=-1,                   ! Random seed for velocity
  ntr=1                    ! Restraints
  restraint_wt = 0.1,      ! Constraints of 0.1 kcal/mol
  restraintmask = '@CA'    ! Constraints on backbone
  ntpr=1000,               ! Energy information every 2 ps
  ntwx=1000                ! Coordinates written every 2 ps
 &end
